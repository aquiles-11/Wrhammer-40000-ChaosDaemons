<Defs>

<!-- Melee Base -->

	<ThingDef Name="BEWH_BaseMeleeWeapon" ParentName="BaseMeleeWeapon" Abstract="True">
		<techLevel>Ultra</techLevel>
		<tradeNeverStack>true</tradeNeverStack>
		<graphicData>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>1</drawSize>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!-- <relicChance>3</relicChance> -->
		<recipeMaker>
			<skillRequirements>
				<Crafting>14</Crafting>
			</skillRequirements>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
			<researchPrerequisites>
				<li>BEWH_ChaosGuardMelee</li>
			</researchPrerequisites>
		</recipeMaker>
		<smeltable>false</smeltable>
		<burnableByRecipe>true</burnableByRecipe>
		<notifyMapRemoved>true</notifyMapRemoved>
		<thingCategories>
			<li>CG_Melee</li>
		</thingCategories>
		<statBases>
			<MarketValue>2200</MarketValue>
			<WorkToMake>20000</WorkToMake>
			<Mass>3</Mass>
		</statBases>
		<costList>
			<Plasteel>25</Plasteel>
			<Uranium>15</Uranium>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<costStuffCount>150</costStuffCount>
		<stuffCategories>
		  <li>Metallic</li>
		</stuffCategories>
		
		<comps>
			<li Class="CompProperties_BladelinkWeapon" MayRequire="ludeon.rimworld.royalty">
				<biocodeOnEquip>true</biocodeOnEquip>
			</li>
		</comps>	
        <tradeTags>
            <li>GF40K_MechanicusMelee</li>
			<li>GF40K_ImperiumMelee</li>
        </tradeTags>
        <weaponTags>
            <li>ImperiumMeleeMechanicus</li>
        </weaponTags>	
	</ThingDef>
	
	<ThingDef Name="BEWH_BaseMeleeWeapon_Oversize" ParentName="BEWH_BaseMeleeWeapon" Abstract="True">
		<equippedAngleOffset>45</equippedAngleOffset>
		<modExtensions>
			<li Class="VFECore.ThingDefExtension">
				<weaponDraftedDrawOffsets>
					<north>
						<drawOffset>(0.34,0,0.50)</drawOffset>
						<angleOffset>-143</angleOffset>
					</north>
					<east>
						<drawOffset>(0.1,0,0.50)</drawOffset>
						<angleOffset>-122</angleOffset>
					</east>
					<south>
						<drawOffset>(-0.34,0,0.50)</drawOffset>
						<angleOffset>-143</angleOffset>
					</south>
					<west>
						<drawOffset>(-0.1,0,0.50)</drawOffset>
						<angleOffset>122</angleOffset>
					</west>
				</weaponDraftedDrawOffsets>		
			</li>
		</modExtensions>
	</ThingDef>

