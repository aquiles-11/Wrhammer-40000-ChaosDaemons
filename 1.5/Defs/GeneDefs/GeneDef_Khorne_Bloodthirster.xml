					<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
					<defaultData>
						<layer>-2</layer>
					</defaultData>
					<dataNorth>
						<offset>(0, 0.2, 0.3)</offset>
						<layer>90</layer>
