					<dataSouth>
						<offset>(0, -0.2, 0.3)</offset>
					</dataSouth>
					<dataEast>
						<offset>(-0.7, 0, 0.3)</offset>
						<layer>-40</layer>
					</dataEast>
					<dataWest>
						<offset>(0.7, 0, 0.3)</offset>
						<layer>-40</layer>
					</dataWest>
				</drawData>
            </li>
        </renderNodeProperties>
