        <description>???</description>
        <iconPath>Placeholder</iconPath>
        <displayOrderInCategory>23</displayOrderInCategory>
        <exclusionTags>
            <li>Wing</li>
            <li>Wings</li>
        </exclusionTags>
        <renderNodeProperties>
            <li>
                <workerClass>PawnRenderNodeWorker_AttachmentBody</workerClass>
                <texPath>Things/Pawn/Humanlike/Khorne/Bloodthirster/BodyAttachments/Wings/BloodthirsterWings</texPath>
                <colorType>Custom</colorType>
                <overrideMeshSize>(2.3, 2.3)</overrideMeshSize>
